{% extends 'base.html.twig' %}

{% block title %}Demander un devis{% endblock %}

{% block body %}
<!-- ====== Page Title Section Start -->
  <section class="bg-white py-[70px] mt-20 ">
    <div class="mx-auto px-4 sm:container">
      <div class="border-l-[5px] border-primary pl-5">
        <h2 class="mb-2 text-2xl font-semibold text-bleu1 ">
          Demander un devis
        </h2>
        <p class="text-sm font-medium text-body-color ">
          Demande de devis et vous allez recevoir une réponse dans les plus brefs délais.
        </p>
      </div>
    </div>
    <div class="max-w-xl mx-auto p-6 bg-white rounded-lg shadow-md">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div>
    {{ form_label(form.mat, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.mat, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'GA-000-BB'
    }}) }}
    {{ form_errors(form.mat) }}
</div>

<div>
    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.name, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'Jean'
    }}) }}
    {{ form_errors(form.name) }}
</div>

<div>
    {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.lastName, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'François'
    }}) }}
    {{ form_errors(form.lastName) }}
</div>

<div>
    {{ form_label(form.phoe, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.phoe, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': '06 00 00 00 00'
    }}) }}
    {{ form_errors(form.phoe) }}
</div>

<div>
    {{ form_label(form.position, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.position, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'Paris'
    }}) }}
    {{ form_errors(form.position) }}
</div>

<div>
    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.email, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'exemple@domaine.com'
    }}) }}
    {{ form_errors(form.email) }}
</div>

<div>
    {{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.message, {'attr': {
        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        'placeholder': 'Votre message...',
        'rows': '5'
    }}) }}
    {{ form_errors(form.message) }}
</div>

<div class="mb-6">
    <label for="{{ form.images.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
        {{ form.images.vars.label|default('Télécharger des images') }}
    </label>

    <div class="flex items-center justify-center w-full">
        <label for="{{ form.images.vars.id }}" class="flex flex-col items-center justify-center w-full h-40 border-2 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 border-gray-300 transition duration-150">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg aria-hidden="true" class="w-10 h-10 mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M7 16V4m0 0L4 7m3-3l3 3M5 20h14a2 2 0 002-2V7a2 2 0 00-2-2h-4.586a1 1 0 00-.707.293l-1.414 1.414a1 1 0 01-.707.293H5a2 2 0 00-2 2v9a2 2 0 002 2z" />
                </svg>
                <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Cliquez pour choisir</span> ou déposez les images</p>
                <p class="text-xs text-gray-500">PNG, JPG, WebP (max 5 Mo)</p>
            </div>
            {{ form_widget(form.images, {
                'attr': {
                    'class': 'hidden',
                    'accept': 'image/*',
                    'multiple': true
                }
            }) }}
        </label>
    </div>

    {{ form_errors(form.images) }}
</div>

<div>
    {{ form_widget(form.submit, {'attr': {
        'class': 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
    }}) }}
</div>

{{ form_end(form) }}

    </div>

  </section>
  <!-- ====== Page Title Section End -->
{% endblock %}
